<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddListItemFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textAddTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/text_add_task"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textAddSubTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8sp"
            android:layout_weight="1"
            android:text="@string/text_add_subtask"
            android:textSize="16sp" />

        <Button
            android:id="@+id/buttonSaveAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_save_add" />

    </LinearLayout>

</FrameLayout>